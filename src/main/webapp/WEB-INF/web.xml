<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>UsuarioController</servlet-name>
        <servlet-class>com.mycompany.almacencas.controller.UsuarioController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>srvValidar</servlet-name>
        <servlet-class>com.mycompany.almacencas.controller.srvValidar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductoController</servlet-name>
        <servlet-class>com.mycompany.almacencas.controller.ProductoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InventarioController</servlet-name>
        <servlet-class>com.mycompany.almacencas.controller.InventarioController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UsuarioController</servlet-name>
        <url-pattern>/UsuarioController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>srvValidar</servlet-name>
        <url-pattern>/srvValidar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductoController</servlet-name>
        <url-pattern>/ProductoController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InventarioController</servlet-name>
        <url-pattern>/InventarioController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
